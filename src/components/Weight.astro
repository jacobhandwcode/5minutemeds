    /* Contact Card */
    .contact-card {
        background: linear-gradient(135deg, #c5ddc9 0%, #b5cdb9 100%);
        border-radius: 60px;
        padding: 50px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .contact-card h2 {
        font-size: 56px;
        font-weight: 400;
        margin-bottom: 28px;
        color: white;
