        border-radius: 60px;
        padding: 50px;
        color: white;
        position: relative;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .mission-card h2 {
        font-size: 56px;
        font-weight: 400;
        margin-bottom: 24px;
        font-family: "Sofia", sans-serif;
        line-height: 1.1;
    }

