</section>

<style>
    .additional-sections {
        margin: 0 auto;
        padding: 40px;
        background-color:#FAF8F2;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    /* Treatments Row */
    .treatments-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    .treatment-card {
        border-radius: 60px;
        padding: 50px;
        display: flex;
        flex-direction: column;
        gap: 24px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        height: 100%;
    }

