        font-size: 28px;
        font-weight: 400;
        margin-bottom: 0;
        font-family: "Sofia", sans-serif;
        color: #3a3a3a;
        line-height: 1.1;
        text-align: left;
    }

    .subtitle {
        font-size: 13px;
        margin-bottom: 0;
        line-height: 1.3;
        font-family: "Inter", sans-serif;
        color: #3a3a3a;
        text-align: left;
    }

    .sex-life-card {
        background-color: #ffffff;
        color: #3a3a3a;
    }

    .top-section {
        display: flex;
        gap: 12px;
        align-items: center;
    }

    .left-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 8px;
        align-items: flex-start;
    }

    .right-content {
        display: flex;
        flex-direction: column;
        gap: 8px;
        align-items: flex-start;
    }

    .product-showcase {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-image {
        max-width: 140px;
        height: auto;
        filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.12));
    }

    .pricing {
        text-align: left;
    }

    .pricing p {
        margin: 2px 0;
        font-size: 12px;
        font-family: "Inter", sans-serif;
        line-height: 1.3;
        color: #3a3a3a;
    }

    .pricing strong {
