</style>

<script>
    // Testimonial Carousel
    let currentTestimonialIndex = 0;
    const testimonialBoxes = document.querySelectorAll('.sex-life-card .testimonial-box');
    const prevBtn = document.getElementById('prevTestimonial');
    const nextBtn = document.getElementById('nextTestimonial');

    function showTestimonial(index: number) {
        testimonialBoxes.forEach((box, i) => {
            box.classList.remove('active', 'prev');
            if (i === index) {
                box.classList.add('active');
            } else if (i < index) {
                box.classList.add('prev');
            }
        });
    }

    function nextTestimonial() {
        currentTestimonialIndex = (currentTestimonialIndex + 1) % testimonialBoxes.length;
        showTestimonial(currentTestimonialIndex);
    }

    function prevTestimonial() {
        currentTestimonialIndex = (currentTestimonialIndex - 1 + testimonialBoxes.length) % testimonialBoxes.length;
        showTestimonial(currentTestimonialIndex);
    }

    nextBtn?.addEventListener('click', nextTestimonial);
    prevBtn?.addEventListener('click', prevTestimonial);

    // Initialize
    showTestimonial(0);
</script>