// Footer.astro
const footerLinks = {
    contact: [
        { text: "Contact", url: "/contact" },
        { text: "info@5minutemeds.com", url: "mailto:info@5minutemeds.com" },
    ],
    learnMore: [
        { text: "Blog", url: "#" },
        { text: "Case studies", url: "#" },
        { text: "Customer stories", url: "#" },
        { text: "Best practices", url: "#" },
    ],
    legal: [
        { text: "Privacy policy", url: "/privacy-policy" },
        { text: "Refund policy", url: "#" },
        { text: "Terms", url: "#" },
        { text: "Consent to telehealth", url: "#" },
        { text: "Physical code of conduct", url: "#" },
    ],
};

