---
const services = [
    {
        title: "Lose Weight",
        image: "/images/lose-weight.png",
        alt: "Weight loss products",
    },
    {
        title: "Support Longevity",
        image: "/images/longevity.png",
        alt: "Longevity support products",
    },
    {
        title: "Regrow Hair",
        image: "/images/regrow-hair1.png",
        alt: "Hair regrowth products",
    },
    {
        title: "Improve Your Sex Life",
        image: "/images/improve.png",
        alt: "Sexual health products",
        customClass: "sex-life-image",
    },
];
---

<main class="hero-section">
    <button class="hamburger" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
    </button>

    <!-- Login Button with Gradient Border -->
    <button class="login-btn" aria-label="Login">
        <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
        >
            <path
                d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            <circle
                cx="12"
                cy="7"
                r="4"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"></circle>
        </svg>
        Login
    </button>

    <!-- Mobile Menu Overlay -->
    <div class="menu-overlay">
        <div class="menu-container">
            <button class="menu-close" aria-label="Close menu">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
                    <path
                        d="M18 6L6 18M6 6l12 12"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"></path>
                </svg>
            </button>

            <nav class="menu-nav">
                <a href="#weight-loss" class="menu-item">
                    <span class="menu-item-text">Weight Loss</span>
                    <svg
                        class="menu-item-arrow"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                    >
                        <path
                            d="M9 18l6-6-6-6"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"></path>
                    </svg>
                </a>
                <a href="#longevity" class="menu-item">
                    <span class="menu-item-text">Longevity</span>
                    <svg
                        class="menu-item-arrow"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                    >
                        <path
                            d="M9 18l6-6-6-6"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"></path>
                    </svg>
                </a>
                <a href="#hair-growth" class="menu-item">
                    <span class="menu-item-text">Hair Growth</span>
                    <svg
                        class="menu-item-arrow"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                    >
                        <path
                            d="M9 18l6-6-6-6"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"></path>
                    </svg>
                </a>
                <a href="#sexual-health" class="menu-item">
                    <span class="menu-item-text">Sexual Health</span>
                    <svg
                        class="menu-item-arrow"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                    >
                        <path
                            d="M9 18l6-6-6-6"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"></path>
                    </svg>
                </a>
                <a href="#about" class="menu-item" id="aboutMenuItem">
                    <span class="menu-item-text">About Us</span>
                    <svg
                        class="menu-item-arrow"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                    >
                        <path
                            d="M9 18l6-6-6-6"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"></path>
                    </svg>
                </a>
                <a href="#contact" class="menu-item">
                    <span class="menu-item-text">Contact</span>
                    <svg
                        class="menu-item-arrow"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                    >
                        <path
                            d="M9 18l6-6-6-6"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"></path>
                    </svg>
                </a>
            </nav>

            <div class="menu-footer">
                <p class="menu-footer-text">Same day prescriptions</p>
                <div class="menu-rating">
                    <span class="menu-stars">★★★★★</span>
                    <span class="menu-rating-text">4.9/5</span>
                </div>
            </div>
        </div>
    </div>

    <!-- About Us Modal -->
    <div class="about-modal-overlay" id="aboutModal">
        <div class="about-modal-container">
            <button
                class="about-modal-close"
                id="closeAboutModal"
                aria-label="Close"
            >
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
                    <path
                        d="M18 6L6 18M6 6l12 12"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"></path>
                </svg>
            </button>

            <div class="about-modal-content">
                <h2 class="about-modal-title">Our Outstanding Mission</h2>

                <div class="about-modal-grid">
                    <div class="about-modal-text">
                        <p>
                            Get the treatments you need in minutes, not weeks.
                            At 5MinuteMeds, our mission is simple: make quality
                            medication fast and affordable.
                        </p>
                        <p>
                            No long waits, no inflated prices—just quick,
                            convenient access to trusted treatments when you
                            need them.
                        </p>
                        <p>
                            We believe healthcare should be accessible,
                            efficient, and designed around your life. That's why
                            we've streamlined the entire process—from
                            consultation to delivery—so you can focus on what
                            matters most: your health and wellbeing.
                        </p>
                    </div>

                    <div class="about-modal-image">
                        <img src="/images/guy.png" alt="Happy Customer" />
                    </div>
                </div>

                <div class="about-modal-stats">
                    <div class="stat-item">
                        <div class="stat-number">46K+</div>
                        <div class="stat-label">Active Users</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">4.9/5</div>
                        <div class="stat-label">Customer Rating</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">Same Day</div>
                        <div class="stat-label">Prescriptions</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="hero-content">
        <h1 class="hero-title">
            <span class="rotating-text">
                <span class="text-item active" data-color="#0070da"
                    >Weight Loss</span
                >
                <span class="text-item" data-color="#4e9a69">Longevity</span>
                <span class="text-item" data-color="#9571a0">Hair Growth</span>
                <span class="text-item" data-color="#c64c0b">Better Sex</span>
            </span>
            <br />
            <span class="static-text">designed for you</span>
        </h1>
        <p class="hero-subtitle">Same day prescriptions</p>

        <div class="rating">
            <div class="stars">
                <span class="stars-top">★★★</span>
                <span class="stars-bottom">★★</span>
            </div>
            <p class="rating-text">
                4.9/5 Based on 46,392 monthly active users<sup>1</sup>
            </p>
        </div>

        <p class="fha-hsa-text">FHA/HSA eligible</p>
    </div>

    <div class="services-grid">
        {
            services.map((service) => (
                <a href="#" class="service-card">
                    <div class="card-inner">
                        <div class="card-header">
                            <h2 class="card-title">{service.title}</h2>
                            <svg
                                class="card-arrow"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                            >
                                <path
                                    d="M9 18l6-6-6-6"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                />
                            </svg>
                        </div>
                        {service.images ? (
                            <div class="card-images-dual">
                                <img
                                    src={service.images[0]}
                                    alt={service.alt}
                                    class="card-image"
                                />
                                <img
                                    src={service.images[1]}
                                    alt={service.alt}
                                    class="card-image"
                                />
                            </div>
                        ) : (
                            <div class="card-image-container">
                                <img
                                    src={service.image}
                                    alt={service.alt}
                                    class={`card-image ${service.customClass || ''}`}
                                />
                            </div>
                        )}
                    </div>
                </a>
            ))
        }
    </div>
</main>

<style>
    /* Hero Section with padding and max-width */
    .hero-section {
        padding-left: 80px;
        padding-right: 80px;
        max-width: 1550px;
        margin: 0 auto;
        position: relative;
    }

    /* Login Button with Gradient Border */
    .login-btn {
        position: absolute;
        top: 20px;
        right: 100px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background-color: #ffffff;
        border: none;
        border-radius: 50px;
        font-size: 14px;
        font-weight: 600;
        color: #1a1a1a;
        cursor: pointer;
        font-family: "Inter", sans-serif;
        z-index: 100;
        transition: all 0.3s ease;
    }

    /* Gradient border using pseudo-element */
    .login-btn::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        border-radius: 50px;
        padding: 2.5px;
        background: linear-gradient(
            135deg,
            #fdd4a3,
            #fdd4a3 13%,
            #fba69e 32%,
            #fb6fec 49%,
            #84a9fa 68%,
            #90dcf7 86%,
            #c7e9ab
        );
        -webkit-mask:
            linear-gradient(#fff 0 0) content-box,
            linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        z-index: -1;
        transition: all 0.3s ease;
    }

    .login-btn:hover::before {
        background: linear-gradient(
            225deg,
            #fdd4a3,
            #fdd4a3 13%,
            #fba69e 32%,
            #fb6fec 49%,
            #84a9fa 68%,
            #90dcf7 86%,
            #c7e9ab
        );
        padding: 3px;
    }

    .login-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(251, 111, 236, 0.3);
    }

    .login-btn svg {
        stroke: #1a1a1a;
    }

    /* FHA/HSA Text - Left aligned under rating */
    .fha-hsa-text {
        font-size: 14px;
        font-weight: 600;
        color: rgba(0, 0, 0, 0.65);
        margin-top: 12px;
        font-family: "Inter", sans-serif;
        text-align: left;
    }

    /* About Us Modal Styles */
    .about-modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        z-index: 2000;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 18px;
        opacity: 0;
        visibility: hidden;
        transition:
            opacity 0.3s ease,
            visibility 0.3s ease;
    }

    .about-modal-overlay.active {
        opacity: 1;
        visibility: visible;
    }

    .about-modal-container {
        background-color: #ffffff;
        border-radius: 40px;
        max-width: 900px;
        width: 100%;
        padding: 48px;
        position: relative;
        box-shadow: 2px 4px 12px #00000014;
        transform: scale(0.9);
        transition: transform 0.3s ease;
        max-height: 90vh;
        overflow-y: auto;
    }

    .about-modal-overlay.active .about-modal-container {
        transform: scale(1);
    }

    .about-modal-close {
        position: absolute;
        top: 10px;
        right: 10px;
        background: none;
        border: none;
        cursor: pointer;
        padding: 6px;
        color: #3a3a3a;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.2s ease;
        z-index: 10;
    }

    .about-modal-close:hover {
        transform: rotate(90deg);
    }

    .about-modal-content {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    .about-modal-title {
        font-family: "Sofia", sans-serif;
        font-size: 46px;
        font-weight: 400;
        color: #3a3a3a;
        margin: 0 0 24px 0;
        line-height: 1.1;
        text-align: center;
    }

    .about-modal-grid {
        display: grid;
        grid-template-columns: 1.2fr 1fr;
        gap: 32px;
        align-items: stretch;
        margin-bottom: 24px;
    }

    .about-modal-text {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .about-modal-text p {
        font-family: "Inter", sans-serif;
        font-size: 16px;
        line-height: 1.6;
        color: #3a3a3a;
        margin: 0;
    }

    .about-modal-image {
        display: flex;
        align-items: flex-end;
        justify-content: center;
        bottom: -2rem;
        position: relative;
    }

    .about-modal-image img {
        width: 100%;
        max-width: 300px;
        height: auto;
        object-fit: contain;
    }

    .about-modal-stats {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
        padding-top: 24px;
        border-top: 2px solid #f0f0f0;
    }

    .stat-item {
        text-align: center;
    }

    .stat-number {
        font-size: 40px;
        font-weight: 700;
        color: #3a3a3a;
        margin-bottom: 6px;
        line-height: 1;
    }

    .stat-label {
        font-family: "Inter", sans-serif;
        font-size: 14px;
        color: #666;
    }

    /* Service Cards with Enhanced Images */
    .service-card {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .card-image-container {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
        flex: 1;
    }

    .card-image {
        width: 100%;
        max-width: 120px;
        height: 120px;
        max-height: 200px;
        object-fit: contain;
        transition: all 0.4s ease;
        filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.15));
        display: block;
        margin: 0 auto;
    }

    /* Specific styling for "Improve Your Sex Life" image */
    .card-image.sex-life-image {
        position: relative;
        top: 5px;
    }

    .service-card:hover .card-image {
        transform: rotate(5deg) scale(1.05);
        filter: drop-shadow(0 16px 32px rgba(0, 0, 0, 0.35));
    }

    .card-images-dual {
        display: flex;
        gap: 16px;
        align-items: flex-end;
        justify-content: center;
        margin-top: auto;
    }

    .card-images-dual .card-image {
        width: 100%;
        max-width: 80px;
        margin: 0;
    }

    @media (max-width: 768px) {
        .hero-section {
            padding-left: 20px;
            padding-right: 20px;
        }

        .login-btn {
            top: 10px;
            right: 70px;
            padding: 10px 20px;
            font-size: 13px;
            gap: 6px;
        }

        .login-btn svg {
            width: 16px;
            height: 16px;
        }

        .fha-hsa-text {
            font-size: 13px;
            margin-top: 10px;
        }

        .about-modal-container {
            padding: 32px 24px;
            border-radius: 28px;
        }

        .about-modal-title {
            font-size: 30px;
            margin-bottom: 20px;
        }

        .about-modal-grid {
            grid-template-columns: 1fr;
            gap: 24px;
            margin-bottom: 20px;
        }

        .about-modal-text p {
            font-size: 14px;
        }

        .about-modal-stats {
            grid-template-columns: 1fr;
            gap: 20px;
            padding-top: 20px;
        }

        .stat-number {
            font-size: 30px;
        }

        .stat-label {
            font-size: 13px;
        }

        .card-image {
            max-width: 100px;
            max-height: 160px;
        }

        .card-images-dual .card-image {
            max-width: 70px;
        }
    }
</style>

<script>
    // Text rotation functionality
    const textItems = document.querySelectorAll(".text-item");
    let currentIndex = 0;

    function rotateText() {
        const current = textItems[currentIndex];
        const nextIndex = (currentIndex + 1) % textItems.length;
        const next = textItems[nextIndex];

        current.classList.remove("active");
        current.classList.add("exit");

        setTimeout(() => {
            current.classList.remove("exit");
            next.classList.add("active");
            currentIndex = nextIndex;
        }, 500);
    }

    setInterval(rotateText, 3000);

    // Menu functionality
    const hamburger = document.querySelector(".hamburger");
    const menuOverlay = document.querySelector(".menu-overlay");
    const menuClose = document.querySelector(".menu-close");
    const menuItems = document.querySelectorAll(".menu-item");
    const aboutMenuItem = document.getElementById("aboutMenuItem");
    const aboutModal = document.getElementById("aboutModal");
    const closeAboutModal = document.getElementById("closeAboutModal");

    function openMenu() {
        menuOverlay.classList.add("active");
        document.body.style.overflow = "hidden";
    }

    function closeMenu() {
        menuOverlay.classList.remove("active");
        document.body.style.overflow = "";
    }

    function openAboutModal() {
        closeMenu(); // Close the menu first
        setTimeout(() => {
            aboutModal?.classList.add("active");
            document.body.style.overflow = "hidden";
        }, 300); // Wait for menu to close
    }

    function closeAboutModalFunc() {
        aboutModal?.classList.remove("active");
        document.body.style.overflow = "";
    }

    hamburger?.addEventListener("click", openMenu);
    menuClose?.addEventListener("click", closeMenu);

    // About menu item opens modal
    aboutMenuItem?.addEventListener("click", (e) => {
        e.preventDefault();
        openAboutModal();
    });

    // Close about modal
    closeAboutModal?.addEventListener("click", closeAboutModalFunc);

    // Close about modal when clicking outside
    aboutModal?.addEventListener("click", (e) => {
        if (e.target === aboutModal) {
            closeAboutModalFunc();
        }
    });

    // Close menu when clicking on other menu items
    menuItems.forEach((item) => {
        if (item.id !== "aboutMenuItem") {
            item.addEventListener("click", closeMenu);
        }
    });

    // Close menu when clicking outside the menu container
    menuOverlay?.addEventListener("click", (e) => {
        if (e.target === menuOverlay) {
            closeMenu();
        }
    });

    // Close modals on escape key
    document.addEventListener("keydown", (e) => {
        if (e.key === "Escape") {
            if (menuOverlay?.classList.contains("active")) {
                closeMenu();
            }
            if (aboutModal?.classList.contains("active")) {
                closeAboutModalFunc();
            }
        }
    });
</script>