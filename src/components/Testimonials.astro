<style>
    .testimonial-carousel-section {
        padding: 60px 0;
        background-color: #f9f9fa;
        overflow: hidden;
            max-width: 1400px;
    margin: 0 auto;
    }

    /* Carousel Row */
    .carousel-row {
        margin-bottom: 20px;
    }

    .carousel-scroll-wrapper {
        overflow: hidden;
        position: relative;
    }

    .carousel-scroll {
        display: flex;
        width: max-content;
        gap: 0;
    }

    /* Top Row - Scroll Right */
    .scroll-right {
        animation: scrollRight 40s linear infinite;
    }

    /* Bottom Row - Scroll Left */
    .scroll-left {
        animation: scrollLeft 40s linear infinite;
    }

    /* Pause animations on hover */
    .carousel-scroll:hover {
        animation-play-state: paused;
    }

    @keyframes scrollRight {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    @keyframes scrollLeft {
        0% {
            transform: translateX(-50%);
        }
        100% {
            transform: translateX(0);
        }
    }

    .carousel-content {
        display: flex;
        gap: 20px;
        padding: 0 10px;
    }

    /* Testimonial Card */
    .testimonial-card {
        background: #ffffff;
        border-radius: 24px;
        padding: 24px;
        width: 380px;
        flex-shrink: 0;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        display: flex;
        flex-direction: column;
        gap: 16px;
        transition: all 0.3s ease;
    }

    .testimonial-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    }

    .testimonial-header {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .testimonial-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        object-fit: cover;
    }

    .testimonial-info {
        flex: 1;
    }

    .testimonial-name {
        font-size: 16px;
        font-weight: 600;
        color: #030303;
        margin: 0 0 4px 0;
        font-family: "Inter", sans-serif;
    }

    .testimonial-stars {
        color: #ffa726;
        font-size: 14px;
        letter-spacing: 2px;
    }

    .testimonial-text {
        font-size: 14px;
        line-height: 1.6;
        color: #4a4a4a;
        margin: 0;
        font-family: "Inter", sans-serif;
    }

    .verified-badge {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 13px;
        color: #666;
        font-family: "Inter", sans-serif;
    }

    .verified-badge svg {
        stroke: #666;
    }

    /* Center Images Row */
    .center-images-row {
        display: flex;
        gap: 20px;
        justify-content: center;
        margin: 40px 0;
        padding: 0 80px;
    }

    .center-image-card {
        border-radius: 32px;
        overflow: hidden;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        flex: 1;
        max-width: 500px;
    }

    .center-image {
        width: 100%;
        height: 400px;
        object-fit: cover;
        display: block;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .testimonial-carousel-section {
            padding: 40px 0;
        }

        .carousel-row {
            margin-bottom: 16px;
        }

        .carousel-content {
            gap: 16px;
        }

        .testimonial-card {
            width: 320px;
            padding: 20px;
            border-radius: 20px;
        }

        .testimonial-avatar {
            width: 40px;
            height: 40px;
        }

        .testimonial-name {
            font-size: 15px;
        }

        .testimonial-stars {
            font-size: 13px;
        }

        .testimonial-text {
            font-size: 13px;
        }

        .verified-badge {
            font-size: 12px;
        }

        .center-images-row {
            flex-direction: column;
            padding: 0 20px;
            margin: 32px 0;
            gap: 16px;
        }

        .center-image-card {
            border-radius: 24px;
        }

        .center-image {
            height: 300px;
        }
    }
</style>
