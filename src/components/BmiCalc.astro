                const imgSrc = img?.src || "";

                if (quoteText) quoteText.textContent = `"${quote}"`;
                if (quoteAuthorName) quoteAuthorName.textContent = name;
                if (quoteAuthorResult) quoteAuthorResult.textContent = `Lost ${pounds}`;
                if (quoteAvatar) quoteAvatar.style.backgroundImage = `url(${imgSrc})`;

