<!-- Weight Loss Results Modal -->
<div class="results-modal-overlay" id="resultsModal">
    <div class="results-modal">
        <button class="modal-close-btn" id="closeModal" aria-label="Close">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
                <path
                    d="M18 6L6 18M6 6l12 12"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"></path>
            </svg>
        </button>

        <div class="modal-content-grid">
            <!-- Left Side: Average Weight Loss -->
            <div class="modal-left">
                <p class="loss-label">Lose on average:</p>
                <div class="percentage-display">15%</div>
                <p class="percentage-subtitle">
                    of your body weight with 5 Minute Meds*
                </p>

                <button class="get-started-btn">Get started</button>

                <div class="disclaimer">
                    <p>
                        *In a clinical trial, adults taking FDA-approved
                        5 Minute Meds lost an average of 15% body weight. Some lost
                        up to 20%. Results vary. Side effects may include nausea
                        or diarrhea. Only a licensed provider can decide if it's
                        appropriate. Compounded GLP-1s are not FDA-approved.
                    </p>
                </div>
            </div>

            <!-- Right Side: Personalized Results -->
            <div class="modal-right">
                <div class="weight-badge-modal">
                    <span class="badge-text">Starting weight:</span>
                    <span class="badge-weight" id="modalStartWeight">205</span>
                    <span class="badge-unit">lbs</span>
                </div>

                <p class="modal-loss-label">You could lose:</p>
                <div class="modal-weight-display">
                    <span class="modal-weight-number" id="modalWeightLoss"
                        >31</span
                    >
                    <span class="modal-weight-unit">lbs</span>
                </div>

                <div class="modal-chart">
                    <div class="modal-chart-bars" id="modalChartBars">
                        <!-- Bars generated dynamically -->
                    </div>
                    <div class="modal-chart-marker">â–¼</div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Modal Overlay */
    .results-modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        z-index: 2000;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        opacity: 0;
        visibility: hidden;
        transition:
            opacity 0.3s ease,
            visibility 0.3s ease;
    }

    .results-modal-overlay.active {
        opacity: 1;
        visibility: visible;
    }

    /* Modal Container */
    .results-modal {
        background-color: #ffffff;
        border-radius: 48px;
        max-width: 1100px;
        width: 100%;
        padding: 60px;
        position: relative;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        transform: scale(0.9);
        transition: transform 0.3s ease;
    }

    .results-modal-overlay.active .results-modal {
        transform: scale(1);
    }

    /* Close Button */
    .modal-close-btn {
        position: absolute;
        top: 32px;
        right: 32px;
        background: none;
        border: none;
        cursor: pointer;
        padding: 8px;
        color: #030303;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.2s ease;
        z-index: 10;
    }

    .modal-close-btn:hover {
        transform: rotate(90deg);
    }

    /* Modal Content Grid */
    .modal-content-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 60px;
        align-items: center;
    }

    /* Left Side */
    .modal-left {
        padding-right: 40px;
    }

    .loss-label {
        font-size: 18px;
        color: #666;
        margin-bottom: 16px;
    }

    .percentage-display {
        font-size: 120px;
        font-weight: 700;
        color: #030303;
        line-height: 1;
        margin-bottom: 16px;
    }

    .percentage-subtitle {
        font-size: 18px;
        color: #030303;
        margin-bottom: 40px;
        line-height: 1.5;
    }

    .get-started-btn {
        width: 100%;
        padding: 20px 40px;
        background-color: #030303;
        color: #ffffff;
        border: none;
        border-radius: 50px;
        font-size: 18px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: "Inter";
        margin-bottom: 40px;
    }

    .get-started-btn:hover {
        background-color: #0070da;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0, 112, 218, 0.3);
    }

    .get-started-btn:active {
        transform: translateY(0);
    }

    .disclaimer {
        font-size: 12px;
        color: #666;
        line-height: 1.6;
    }

    /* Right Side */
    .modal-right {
        background: linear-gradient(135deg, #e8f4ff 0%, #f0f8ff 100%);
        border: 3px solid #0070da;
        border-radius: 32px;
        padding: 50px 40px;
    }

    .weight-badge-modal {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background-color: #00875a;
        color: #ffffff;
        padding: 12px 24px;
        border-radius: 12px;
        margin-bottom: 24px;
        font-weight: 500;
    }

    .badge-text {
        font-size: 14px;
    }

    .badge-weight {
        font-size: 24px;
        font-weight: 700;
    }

    .badge-unit {
        font-size: 16px;
    }

    .modal-loss-label {
        font-size: 16px;
        color: #666;
        margin-bottom: 12px;
    }

    .modal-weight-display {
        margin-bottom: 40px;
    }

    .modal-weight-number {
        font-size: 96px;
        font-weight: 700;
        color: #030303;
        line-height: 1;
    }

    .modal-weight-unit {
        font-size: 40px;
        font-weight: 400;
        color: #030303;
    }

    /* Modal Chart */
    .modal-chart {
        position: relative;
    }

    .modal-chart-bars {
        display: flex;
        align-items: flex-end;
        justify-content: space-between;
        gap: 3px;
        height: 120px;
    }

    .modal-chart-bar {
        flex: 1;
        background: linear-gradient(to top, #00875a, #4e9a69);
        border-radius: 4px 4px 0 0;
        transition: all 0.3s ease;
        min-width: 6px;
    }

    .modal-chart-marker {
        position: absolute;
        right: 0;
        top: -28px;
        font-size: 28px;
        color: #00875a;
    }

    /* Trigger Button (example styling) */
    .trigger-modal {
        padding: 16px 32px;
        background-color: #0070da;
        color: #ffffff;
        border: none;
        border-radius: 50px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .trigger-modal:hover {
        background-color: #005bb5;
        transform: translateY(-2px);
    }

    /* Responsive Design */
    @media (max-width: 1024px) {
        .modal-content-grid {
            grid-template-columns: 1fr;
            gap: 40px;
        }

        .modal-left {
            padding-right: 0;
        }

        .percentage-display {
            font-size: 96px;
        }
    }

    @media (max-width: 768px) {
        .results-modal {
            padding: 40px 32px;
            border-radius: 32px;
        }

        .modal-close-btn {
            top: 20px;
            right: 20px;
        }

        .percentage-display {
            font-size: 80px;
        }

        .modal-weight-number {
            font-size: 72px;
        }

        .modal-weight-unit {
            font-size: 32px;
        }

        .modal-chart-bars {
            height: 100px;
        }

        .modal-right {
            padding: 40px 32px;
        }
    }

    @media (max-width: 480px) {
        .results-modal {
            padding: 32px 24px;
        }

        .modal-content-grid {
            gap: 32px;
        }

        .percentage-display {
            font-size: 64px;
        }

        .percentage-subtitle {
            font-size: 16px;
        }

        .modal-weight-number {
            font-size: 56px;
        }

        .disclaimer {
            font-size: 11px;
        }
    }
</style>

<script>
    const showModalBtn = document.getElementById("showResultsModal");
    const closeModalBtn = document.getElementById("closeModal");
    const modalOverlay = document.getElementById("resultsModal");
    const modalChartBars = document.getElementById("modalChartBars");

    // Generate chart bars
    function generateModalChart(weeks = 30) {
        modalChartBars.innerHTML = "";
        for (let i = 0; i < weeks; i++) {
            const bar = document.createElement("div");
            bar.className = "modal-chart-bar";
            const height = 100 - i * 3;
            bar.style.height = Math.max(height, 15) + "%";
            modalChartBars.appendChild(bar);
        }
    }

    generateModalChart();

    function openModal() {
        modalOverlay.classList.add("active");
        document.body.style.overflow = "hidden";
    }

    function closeModal() {
        modalOverlay.classList.remove("active");
        document.body.style.overflow = "";
    }

    showModalBtn?.addEventListener("click", openModal);
    closeModalBtn?.addEventListener("click", closeModal);

    // Close on overlay click
    modalOverlay?.addEventListener("click", (e) => {
        if (e.target === modalOverlay) {
            closeModal();
        }
    });

    // Close on escape key
    document.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && modalOverlay?.classList.contains("active")) {
            closeModal();
        }
    });
</script>
